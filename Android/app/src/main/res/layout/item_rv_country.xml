<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A0F4FF">

    <ImageView
        android:id="@+id/iv_item_flag"
        android:layout_width="70dp" android:layout_height="80dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/italy_flag" />

    <TextView
        android:id="@+id/iv_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/italian_label"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_flag"
        app:layout_constraintStart_toEndOf="@+id/iv_item_flag"
        app:layout_constraintTop_toTopOf="@+id/iv_item_flag" />


</androidx.constraintlayout.widget.ConstraintLayout>